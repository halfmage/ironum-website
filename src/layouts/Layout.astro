---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "Ironum AI Core", description = "Deploy GDPR-compliant AI in your own cloud or on-prem. Boost productivity, protect data, and automate workflows—without hiring an AI team." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.png" type="image/x-icon" />
    
    <meta property="og:title" content="Ironum: Secure, Compliant AI for Your Business" />
    <meta property="og:description" content="Ironum delivers enterprise-grade, private AI hosted in your cloud. Save time, protect IP, and go live in a week—no AI team needed." />
    <meta property="og:image" content="/social.png" />
    <meta property="og:url" content="https://www.ironum.com" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Ironum" />
    
    <!-- Critical Resource Preloading -->
    <link rel="preload" href="/hero-background.png" as="image" type="image/png" />
    <link rel="preload" href="/ironum-logo.svg" as="image" type="image/svg+xml" />
    <link rel="preload" href="/avatar-gerrit.png" as="image" type="image/png" />
    <link rel="dns-prefetch" href="//outlook.office.com" />
  </head>
  <body class="bg-white text-black">
    <slot />
  </body>
</html>
