---
import { Image } from 'astro:assets';
import ironumLogo from '../../public/ironum-logo.svg';
---

<nav class="w-full bg-black flex justify-between items-center p-8 sticky top-0 z-50" x-data="{ mobileMenuOpen: false }">
  <div class="flex items-center">
    <a href="/"><Image src={ironumLogo} alt="Ironum Logo" class="h-6 w-auto" width={120} height={24} loading="eager" /></a>
  </div>
  <ul class="hidden md:flex gap-2">
    <li><a href="#challenges" class="text-white px-4 py-3 rounded-full hover:bg-white/10 active:bg-white/20 transition-all duration-200 min-h-[44px] touch-manipulation" @click.prevent="document.getElementById('challenges').scrollIntoView({ behavior: 'smooth' })">Challenges</a></li>
    <li><a href="#infrastructure" class="text-white px-4 py-3 rounded-full hover:bg-white/10 active:bg-white/20 transition-all duration-200 min-h-[44px] touch-manipulation" @click.prevent="document.getElementById('infrastructure').scrollIntoView({ behavior: 'smooth' })">Infrastructure</a></li>
    <li><a href="#impacts" class="text-white px-4 py-3 rounded-full hover:bg-white/10 active:bg-white/20 transition-all duration-200 min-h-[44px] touch-manipulation" @click.prevent="document.getElementById('impacts').scrollIntoView({ behavior: 'smooth' })">Benefits</a></li>
    <li><a href="#usecases" class="text-white px-4 py-3 rounded-full hover:bg-white/10 active:bg-white/20 transition-all duration-200 min-h-[44px] touch-manipulation" @click.prevent="document.getElementById('usecases').scrollIntoView({ behavior: 'smooth' })">Use Cases</a></li>
    <li><a href="https://outlook.office.com/book/IronumCallWithGerrit@ironum1.onmicrosoft.com/?ismsaljsauthenabled" target="_blank" class="text-white px-4 py-3 rounded-full bg-white/20 hover:bg-white/30 active:bg-white/40 transition-all duration-200 min-h-[44px] touch-manipulation">Book Call With Gerrit</a></li>
  </ul>
  <button class="md:hidden text-white focus:outline-none p-2 rounded-lg hover:bg-white/10 active:bg-white/20 transition-all duration-200 min-h-[44px] min-w-[44px] touch-manipulation" @click="mobileMenuOpen = !mobileMenuOpen">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
  
  <!-- Mobile Menu -->
  <div class="md:hidden absolute top-full left-0 w-full bg-black px-4 py-4 flex-col" x-show="mobileMenuOpen" x-transition>
    <a href="#challenges" class="text-white py-4 px-2 block hover:bg-white/10 active:bg-white/20 rounded-lg transition-all duration-200 min-h-[48px] touch-manipulation" @click="mobileMenuOpen = false; document.getElementById('challenges').scrollIntoView({ behavior: 'smooth' })">Challenges</a>
    <a href="#infrastructure" class="text-white py-4 px-2 block hover:bg-white/10 active:bg-white/20 rounded-lg transition-all duration-200 min-h-[48px] touch-manipulation" @click="mobileMenuOpen = false; document.getElementById('infrastructure').scrollIntoView({ behavior: 'smooth' })">Infrastructure</a>
    <a href="#impacts" class="text-white py-4 px-2 block hover:bg-white/10 active:bg-white/20 rounded-lg transition-all duration-200 min-h-[48px] touch-manipulation" @click="mobileMenuOpen = false; document.getElementById('impacts').scrollIntoView({ behavior: 'smooth' })">Benefits</a>
    <a href="#usecases" class="text-white py-4 px-2 block hover:bg-white/10 active:bg-white/20 rounded-lg transition-all duration-200 min-h-[48px] touch-manipulation" @click="mobileMenuOpen = false; document.getElementById('usecases').scrollIntoView({ behavior: 'smooth' })">Use Cases</a>
    <a href="https://outlook.office.com/book/IronumCallWithGerrit@ironum1.onmicrosoft.com/?ismsaljsauthenabled" class="text-white py-4 px-2 block bg-white/20 hover:bg-white/30 active:bg-white/40 rounded-lg transition-all duration-200 min-h-[48px] touch-manipulation">Contact sales</a>
  </div>
</nav>
